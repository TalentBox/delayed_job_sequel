source "http://rubygems.org"

gemspec :path => "../"

gem "sequel", "#{ENV["SEQUEL"]}"

case ENV["TEST_ADAPTER"]
when /mysql/
  platforms :ruby do
    gem "mysql2"
  end
  platforms :jruby do
    gem "jdbc-mysql"
  end
when /postgres/
  platforms :ruby do
    gem "pg"
  end
  platforms :jruby do
    gem "jdbc-postgres"
  end
else
  platforms :ruby do
    gem "sqlite3"
  end
  platforms :jruby do
    gem "jdbc-sqlite3"
  end
end
